<?xml version="1.0" encoding="UTF-8"?>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="카테고리 변경 확인"
        type="Message"
        state="Warning"
        class="sapUiResponsiveContentPadding">
        <content>
            <Text text="선택하신 카테고리는 고객사의 주 구매 상품이 아닙니다. 정말로 변경하시겠습니까?" />
            <Text text="{view>/categoryChangeMessage}" />
        </content>
        <buttons>
            <Button
                text="예"
                press="onConfirmCategoryChange"
                type="Emphasized" />
            <Button
                text="아니오"
                press="onCancelCategoryChange" />
        </buttons>
    </Dialog>
</core:FragmentDefinition> 