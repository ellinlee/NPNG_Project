<mvc:View controllerName="sync.dc.sd.project02.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="main_Page_home"
        title="{i18n>title}">
        <Panel id="main_Panel_content">
            <FlexBox id='main_FlexBox_container'
                class='outerBox'
                direction="Column"
                alignItems="Center">
                <Text id='main_Text_companyName'
                    text="{i18n>companyName}"
                    class='bigText'>
                </Text>
                <Text id="main_Text_slogan1"
                    text="{i18n>slogan1}"
                    class="medium1Text"></Text>
                <Text id="main_Text_slogan2"
                    text="{i18n>slogan2}"
                    class="medium2Text"></Text>
                <layoutData>
                    <FlexItemData id="main_FlexItemData_spacer"
                        growFactor="0"
                        styleClass="titleSpacer" />
                </layoutData>
                <FlexBox id='main_FlexBox_customerInput'
                    direction="Row"
                    alignItems="Center"
                    justifyContent="Center"
                    class="inlineGroup">
                    <Label id="main_Label_customerName"
                        text="{i18n>custName}"
                        class="inputLabel" />
                    <Input id="main_Input_customerName"
                        placeholder="{i18n>placeholderCustomer}"
                        class="inputField"
                        submit=".onEnterPress" />
                    <Button id="main_Button_submit"
                        text="조회"
                        icon="sap-icon://search"
                        press=".onPress"></Button>
                </FlexBox>
            </FlexBox>
        </Panel>
    </Page>
</mvc:View>