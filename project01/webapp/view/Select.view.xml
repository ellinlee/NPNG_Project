                      <items>
                        <core:Item id="item1" key="paint1" text="{i18n>construct}" />
                        <core:Item id="item2" key="paint2" text="{i18n>car}" />
                        <core:Item id="item3" key="paint3" text="{i18n>boat}" />
                        <core:Item id="item4" key="paint4" text="{i18n>plane}" />
